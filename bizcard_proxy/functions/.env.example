# Copy this file to .env and fill in your local secrets for development
# This file is NOT used in production deployments; use runtime env vars or Secret Manager instead.

# Gemini API key used by the proxy when not using Secret Manager
GEMINI_API_KEY=your_gemini_key_here

# If using Google Secret Manager, set the full resource name
# projects/PROJECT_ID/secrets/GEMINI_API_KEY/versions/latest
# GEMINI_SECRET_NAME=

# Optional: restrict allowed CORS origins (comma-separated)
# PROXY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: require Firebase ID token auth
# REQUIRE_AUTH=true

# Optional: rate limiter & quotas
# REDIS_URL=redis://:password@host:6379
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX=30
# QUOTA_MAX_TOKENS=100000
# QUOTA_PERIOD_MS=2592000000
# QUOTA_MAX_REQUESTS=1000

# Optional: request signature hardening
# PROXY_REQUIRE_SIGNATURE=true
# PROXY_SIGNATURE_SECRET=super_secret_value
# PROXY_SIGNATURE_SECRET_PREV=previous_secret_value  # optional during rotation window
# PROXY_SIGNATURE_SECRETS=current_secret,previous_secret  # alternative CSV list form
# PROXY_SIGNATURE_HEADER=x-proxy-signature
# PROXY_SIGNATURE_TTL_MS=120000

# Observability
# SENTRY_DSN=https://<PUBLIC_DSN>@sentry.io/12345
